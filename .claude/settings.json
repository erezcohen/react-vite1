{
  "permissions": {
    "allow": [
      "Bash(afplay:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm run build)",
      "Bash(npm run dev)",
      "Bash(npm run format:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run preview)",
      "Bash(npm run test:run:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm test:*)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "mcp__figma__get_code",
      "mcp__figma__get_image",
      "WebFetch"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}
